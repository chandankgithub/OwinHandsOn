
@model CK.Owin.ViewModels.Login.LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h1>
            Login
        </h1>
    </div>
    <div>
        @using (Html.BeginForm("Submit", "Login", FormMethod.Post))
        {
            if (Model != null)
            {
                <div class="form-group">
                    <label for="Username">Email address</label>
                    @Html.TextBoxFor(model => model.Email, new { @placeholder = "Enter email", @class = "form-control", @type = "email" })

                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    @Html.PasswordFor(model => model.Password, new { @placeholder = "Password", @class = "form-control", @type = "password" })
                </div>

                @Html.HiddenFor(model => model.ReturnUrl);
                <input type="submit" value="Login" name="submit" />
            }

        }
       
    </div>
</body>
</html>
